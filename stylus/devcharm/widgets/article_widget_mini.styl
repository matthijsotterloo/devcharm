.article-widget-mini

    h5
        font-family $type_serif
        margin 0

        a
            border-bottom none

            font-size 1.2em
            font-weight 400
            line-height 1.5em

    .punchline
        font-size 0.85em
        line-height 1.6em
        color $color_grey_8

    .info
        margin-bottom 1.4em

        .author
            font-size 0.8em
            font-weight 600
            line-height 1.5em

            color $color_grey_50

            a
                border-bottom none
                color $color_black

                &:hover
                    color $color_blue_xlight

        .tags
            font-weight 600

        .tags > ul
            display inline

        .tags
            margin 0.5em 0 0 0

            color $color_grey_50

            font-size 0.7em
            text-transform uppercase

            ul
                padding-left 0.3em

                li
                    white-space nowrap

                    &::after
                        content ' / '
                        color $color_grey_50

                    &:last-child::after
                        content ''

                    a
                        border-bottom none
