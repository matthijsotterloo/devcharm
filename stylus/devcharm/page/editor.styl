html.editor
    $height = 65px

    .editor-main
        position absolute
        top $height
        bottom 0
        left 0
        right 0

    .editor-header
        width 100%
        background-color $color_black
        color white
        height $height

        .editor-controls
            text-align right

        .fa
            padding-right 0.2em

            &:after
                content '\2002'

        .guidelines
            padding-left 1em

            a
                color $color_grey_50
                border-bottom 1px solid @color

                font-size 0.85em
                font-weight 600

                transition $transition_quick

                &:hover
                    color white
                    border-bottom 1px solid @color
        select
            color black

    .editor-ace
        background #1650d4

    .editor-ace
    .editor-article
        float left
        width 50%

    .editor-ace
    .editor-article
    #aceeditor
    #preview
        min-height 100%
        height 100%
        overflow-y auto

    #aceeditor
        line-height 1.4em
        font-size 1em

    .editor-controls
        &.status-published
            .control-delete
                display none

        [data-endpoint=""]
            display none

    .article-wrapper
        padding 0 1.3em

        .inactive
            opacity 0.5

        header
            .editor-banner
                margin 1em 0 0 0
                padding 0.85em 0

                border 1px solid $color_grey_90
                border-radius 2px

                color $color_grey_35
                background-color $color_grey_95

                font-size 0.85em
                font-weight 600
                text-align center

            .punchline
                margin 1.2em 0 1.6em 0
                padding-bottom 0.65em
                border-bottom 1px solid $color_grey_90
