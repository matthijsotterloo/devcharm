html.landing

    .banner-top
        padding 1em 5em 2em 5em
        background-color $color_blue

        @media screen and (max-width: 800px)
            padding 1em 1em 1.6em 1em

        @media screen and (max-width: 640px)
            padding 1em 1em 0.5em 1em

        .unit

            h1
            p
                font-family $type_serif

            h1
                margin 0.3em 0 0 0

                color white

                font-family $type_serif
                font-size 5em
                font-weight 800
                line-height 1.1em

                @media screen and (max-width: 640px)
                    font-size 3em

            p
                margin 1.4em 0 2.4em 0

                color $color_blue_xxlight

                font-size 1.3em
                font-weight 300
                line-height 1.4em

                a
                    font-weight 600
                    color white
                    border-bottom 1px solid @color

                strong
                    font-weight 600
                    color white

                @media screen and (max-width: 640px)
                    font-size 1em

            .inline-button
                margin-bottom 1em

                .fa
                    vertical-align middle
                    font-size 1.8em
                    line-height 0

                    &:after
                        content '\2002'

                @media screen and (max-width: 640px)
                    margin-bottom 0.85em

    .menu-landing
        background-color $color_grey_90

        @media screen and (max-width: 800px)
            padding-left 1em

        @media screen and (max-width: 640px)
            padding-left 0

        .inline-button
            margin-right 0.3em

        .inline-button
        .inline-button .active
            @media screen and (max-width: 640px)
                color $color_blue_light
                background-color transparent
                box-shadow none

                font-size 0.85em

    .banner-editorial h2
    .secondary-header h2
        font-family $type_serif

        @media screen and (max-width: 800px)
            margin 0.4em 0 0.3em 0

    .banner-editorial

        h2
            margin 1em 0 0.2em 0
            font-size 2em
            font-weight 400
            text-align center

            @media screen and (max-width: 640px)
                font-size 1.6em

        .featured
            @media screen and (max-width: 800px)
                padding 0 15px

            @media screen and (max-width: 640px)
                padding 0 10px

    .banner-tags
        margin-top 2em
        padding-bottom 1em

        h3
            margin-bottom 0.85em
            padding-right 0.5em

            font-size 1.4em
            font-weight 400

        h3
            font-family $type_serif
            text-align center

        ul
            display inline

            li
                line-height 2em

                a
                    tags-style()

    .secondary-header

        h2
            margin 0.5em 0 0.2em 0
            padding 0 0 0.3em 0
            border-bottom 1px solid $color_grey_80

            font-size 3.5em
            font-weight 700

            @media screen and (max-width: 800px)
                font-size 2.5em

            @media screen and (max-width: 640px)
                font-weight 400
                font-size 1.8em

        .unit
            @media screen and (max-width: 800px)
                padding 0 0.85em

    .wiki-lists
    .hot-lists
    .trending-lists
        .unit
            @media screen and (max-width: 800px)
                padding 0 0.85em
